<UserControl x:Class="OrderQuanNet.Views.OrdersManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OrderQuanNet.Views"
             xmlns:component="clr-namespace:OrderQuanNet.Views.components"
             mc:Ignorable="d" 
             Background="Transparent"
             d:DesignHeight="450" d:DesignWidth="800"
             SizeChanged="UserControl_SizeChanged" Loaded="UserControl_Loaded">
    <Border CornerRadius="10" Background="White" Padding="10">
        <ScrollViewer x:Name="OderPanel" Visibility="Visible" 
                      VerticalScrollBarVisibility="Hidden" 
                      HorizontalScrollBarVisibility="Hidden" 
                      Margin="0,0,0,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                
                <StackPanel VerticalAlignment="Center">
                    <StackPanel VerticalAlignment="Center">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="30" />
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0"  Height="30" Width=" 30" Source="\Resources\Images\usermanagement.png" Stretch="Fill" />
                            <TextBlock Grid.Column="1" VerticalAlignment="Center" Margin="10, 0, 0, 0" FontSize="15" FontWeight="Bold" Foreground="DimGray" Grid.Row="0">DANH SÁCH ĐƠN HÀNG</TextBlock>
                            <Button x:Name="ExportButton" Grid.Column="2" Height="30" Background="White" HorizontalAlignment="Right" VerticalAlignment="Center" Click="Export">
                                <Image Source="\Resources\Images\download.png" Stretch="Fill" />
                            </Button>
                        </Grid>
                    </StackPanel>

                </StackPanel>

                <ItemsControl Grid.Row="1" x:Name="OrderItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3" Margin="2" VerticalAlignment="Top" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <component:HistoryItemsManager Margin="0, 10" Amount="{Binding amount, StringFormat='Số lượng: {0:N0}'}" ItemName="{Binding name}" ImageSource="{Binding image_path}" ItemPrice="{Binding price, StringFormat='Giá tiền: {0:N0}'}" ItemId="{Binding id}" Status="{Binding status}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>
    </Border>
</UserControl>
