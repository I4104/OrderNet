<UserControl x:Class="OrderQuanNet.Views.components.ToolbarButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:OrderQuanNet.Views.components"
             mc:Ignorable="d"
             d:DesignHeight="15" d:DesignWidth="15"
             Background="Transparent">
    <Border x:Name="btn" Width="15" Height="15" Background="{Binding ButtonBackground, RelativeSource={RelativeSource AncestorType=UserControl}}" CornerRadius="100" BorderThickness="1">
        <TextBlock x:Name="Label" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding ButtonText, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
    </Border>
</UserControl>